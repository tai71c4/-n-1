@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container py-4">
    <!-- Banner -->
    <div id="mainCarousel" class="carousel slide mb-5" data-bs-ride="carousel" style="max-height: 300px; overflow: hidden;">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner rounded shadow">
            <div class="carousel-item active">
                <img src="/img/banners/banner.jpg" class="d-block w-100" alt="Banner 1" style="object-fit: cover; height: 300px;">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Phụ kiện chính hãng</h5>
                    <p>Chất lượng cao, giá cả hợp lý</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/img/banners/banner1.jpg" class="d-block w-100" alt="Banner 2" style="object-fit: cover; height: 300px;">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Khuyến mãi hấp dẫn</h5>
                    <p>Giảm giá lên đến 50%</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/img/banners/banner2.jpg" class="d-block w-100" alt="Banner 3" style="object-fit: cover; height: 300px;">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Giao hàng miễn phí</h5>
                    <p>Cho đơn hàng từ 300.000đ</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Danh mục nổi bật -->
    <div class="mb-5">
        <h2 class="h3 mb-4 section-header">Danh mục nổi bật</h2>
        
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="row row-cols-2 row-cols-md-4 g-3">
                    <div class="col">
                        <a href="@Url.Action("TheoLoai", "Product", new { id = 1 })" class="text-decoration-none">
                            <div class="card h-100 category-card">
                                <div class="card-body text-center">
                                    <div class="category-icon">
                                        <i class="fas fa-mobile-alt fa-2x"></i>
                                    </div>
                                    <h6 class="card-title">Ốp lưng điện thoại</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col">
                        <a href="@Url.Action("TheoLoai", "Product", new { id = 2 })" class="text-decoration-none">
                            <div class="card h-100 category-card">
                                <div class="card-body text-center">
                                    <div class="category-icon">
                                        <i class="fas fa-shield-alt fa-2x"></i>
                                    </div>
                                    <h6 class="card-title">Kính cường lực</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col">
                        <a href="@Url.Action("TheoLoai", "Product", new { id = 3 })" class="text-decoration-none">
                            <div class="card h-100 category-card">
                                <div class="card-body text-center">
                                    <div class="category-icon">
                                        <i class="fas fa-plug fa-2x"></i>
                                    </div>
                                    <h6 class="card-title">Cáp sạc & củ sạc</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col">
                        <a href="@Url.Action("TheoLoai", "Product", new { id = 4 })" class="text-decoration-none">
                            <div class="card h-100 category-card">
                                <div class="card-body text-center">
                                    <div class="category-icon">
                                        <i class="fas fa-battery-full fa-2x"></i>
                                    </div>
                                    <h6 class="card-title">Pin dự phòng</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col">
                        <a href="@Url.Action("TheoLoai", "Product", new { id = 5 })" class="text-decoration-none">
                            <div class="card h-100 category-card">
                                <div class="card-body text-center">
                                    <div class="category-icon">
                                        <i class="fas fa-headphones fa-2x"></i>
                                    </div>
                                    <h6 class="card-title">Tai nghe & âm thanh</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col">
                        <a href="@Url.Action("TheoLoai", "Product", new { id = 6 })" class="text-decoration-none">
                            <div class="card h-100 category-card">
                                <div class="card-body text-center">
                                    <div class="category-icon">
                                        <i class="fas fa-exchange-alt fa-2x"></i>
                                    </div>
                                    <h6 class="card-title">Thiết bị chuyển đổi</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col">
                        <a href="@Url.Action("TheoLoai", "Product", new { id = 7 })" class="text-decoration-none">
                            <div class="card h-100 category-card">
                                <div class="card-body text-center">
                                    <div class="category-icon">
                                        <i class="fas fa-tools fa-2x"></i>
                                    </div>
                                    <h6 class="card-title">Phụ kiện tiện ích</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col">
                        <a href="@Url.Action("DanhSach", "Product")" class="text-decoration-none">
                            <div class="card h-100 category-card">
                                <div class="card-body text-center">
                                    <div class="category-icon">
                                        <i class="fas fa-th fa-2x"></i>
                                    </div>
                                    <h6 class="card-title">Xem tất cả</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sản phẩm mới -->
    <div class="mb-5">
        <h2 class="h3 mb-4 section-header">Sản phẩm mới</h2>
        
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @if (ViewBag.SanPhamMoi != null)
            {
                foreach (var product in ViewBag.SanPhamMoi)
                {
                    <div class="col">
                        <div class="card h-100 product-card">
                            <div class="position-relative">
                                <span class="badge bg-danger position-absolute top-0 start-0 m-2">Mới</span>
                                <a href="@Url.Action("ChiTiet", "Product", new { id = product.MaPhuKien })" class="product-link">
                                    <img src="@(string.IsNullOrEmpty(product.HinhAnh) ? "/img/no-image.jpg" : product.HinhAnh)" 
                                         class="card-img-top product-img" alt="@product.TenPhuKien" />
                                </a>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <a href="@Url.Action("ChiTiet", "Product", new { id = product.MaPhuKien })" class="text-decoration-none text-dark">
                                    <h5 class="card-title product-title">@product.TenPhuKien</h5>
                                </a>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="product-price">@product.Gia.ToString("N0") đ</span>
                                        @if (product.SoLuong <= 0)
                                        {
                                            <span class="badge bg-danger">Hết hàng</span>
                                        }
                                        else if (product.SoLuong <= 5)
                                        {
                                            <span class="badge bg-warning text-dark">Còn @product.SoLuong</span>
                                        }
                                    </div>
                                    <div class="d-grid">
                                        @if (product.SoLuong > 0)
                                        {
                                            <a href="javascript:void(0)" onclick="themVaoGioHang(@product.MaPhuKien, 1)" class="btn btn-primary w-100">
                                                <i class="fas fa-cart-plus me-2"></i>Thêm vào giỏ
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-secondary w-100" disabled>
                                                <i class="fas fa-times-circle me-2"></i>Hết hàng
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <!-- Tin tức mới -->
    <div class="mb-5">
        <h2 class="h3 mb-4 section-header">Tin tức mới</h2>
        
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @if (ViewBag.TinTucMoi != null)
            {
                foreach (var tinTuc in ViewBag.TinTucMoi)
                {
                    <div class="col">
                        <div class="card h-100">
                            <div class="position-relative">
                                <img src="@(string.IsNullOrEmpty(tinTuc.HinhAnh) ? "/img/no-image.jpg" : tinTuc.HinhAnh)" 
                                     class="card-img-top" alt="@tinTuc.TieuDe" style="height: 200px; object-fit: cover;">
                                <div class="position-absolute bottom-0 start-0 bg-primary text-white px-3 py-2">
                                    @tinTuc.NgayDang.ToString("dd/MM/yyyy")
                                </div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">@tinTuc.TieuDe</h5>
                                <p class="card-text text-muted">
                                    @(tinTuc.NoiDung?.Length > 100 ? tinTuc.NoiDung.Substring(0, 100) + "..." : tinTuc.NoiDung)
                                </p>
                                <a href="#" class="btn btn-sm btn-outline-primary">Đọc tiếp</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <!-- Đối tác -->
    <div>
        <h2 class="h3 mb-4 section-header">Đối tác của chúng tôi</h2>
        <div class="row row-cols-2 row-cols-md-4 row-cols-lg-6 g-3">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <img src="/img/partner1.png" alt="Partner 1" class="img-fluid" style="max-height: 60px;">
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <img src="/img/partner2.png" alt="Partner 2" class="img-fluid" style="max-height: 60px;">
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <img src="/img/partner3.png" alt="Partner 3" class="img-fluid" style="max-height: 60px;">
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <img src="/img/partner4.png" alt="Partner 4" class="img-fluid" style="max-height: 60px;">
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <img src="/img/partner5.png" alt="Partner 5" class="img-fluid" style="max-height: 60px;">
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <img src="/img/partner6.png" alt="Partner 6" class="img-fluid" style="max-height: 60px;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function themVaoGioHang(maPhuKien, soLuong) {
            $.ajax({
                url: '/Cart/ThemVaoGioHang',
                type: 'POST',
                data: {
                    maPhuKien: maPhuKien,
                    soLuong: soLuong,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(result) {
                    // Hiển thị thông báo thành công
                    alert('Đã thêm sản phẩm vào giỏ hàng');
                    // Tải lại trang sau 1 giây
                    setTimeout(function() {
                        location.reload();
                    }, 1000);
                },
                error: function(error) {
                    alert('Có lỗi xảy ra khi thêm sản phẩm vào giỏ hàng');
                }
            });
        }
    </script>
}

@Html.AntiForgeryToken()